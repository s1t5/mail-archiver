@inject Microsoft.Extensions.Localization.IStringLocalizer<MailArchiver.SharedResource> Localizer
@model MailArchiver.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = Localizer["LoginTitle"];
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="card login-card">
        <div class="card-body">
            <div class="text-center mb-4">
                <i class="bi bi-envelope-check display-3 text-primary"></i>
                <h2 class="mt-3">@Localizer["AppName"]</h2>
                <p class="text-muted">@Localizer["LoginSubtitle"]</p>
            </div>

            @if (!string.IsNullOrEmpty(Context.Request.Query["error"]))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Context.Request.Query["error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">@Localizer["UsernameLabel"]</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-person"></i>
                        </span>
                        <input asp-for="Username" class="form-control" placeholder="@Localizer["UsernamePlaceholder"]" autofocus />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">@Localizer["PasswordLabel"]</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input asp-for="Password" class="form-control" placeholder="@Localizer["PasswordPlaceholder"]" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">@Localizer["RememberMe"]</label>
                </div>
                <div class="mb-3 d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i>@Localizer["SignIn"]
                    </button>
                </div>                
            </form>
            @if (ViewBag.OAuthEnabled)
            {
                <form asp-action="LoginWithOAuth" method="post">
                    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>@Localizer["SignInWithOAuth"]
                        </button>
                    </div>
                </form>
            }            
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
